<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Ip Address"
        android:id="@+id/ipAddress"
        android:ems="10"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Port"
        android:id="@+id/numPort"
        android:inputType="number"
        android:ems="10"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px">
        <Button
            android:id="@+id/btnUp"
            android:layout_width="150px"
            android:layout_height="150px"
            android:text="Up"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/btnP"
            android:layout_width="150px"
            android:layout_height="150px"
            android:text="Play"
            android:layout_below="@+id/btnUp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/btnR"
            android:layout_width="150px"
            android:layout_height="150px"
            android:text="Right"
            android:layout_alignTop="@+id/btnP"
            android:layout_toRightOf="@+id/btnP"
            android:layout_toEndOf="@+id/btnP" />
        <Button
            android:id="@+id/btnD"
            android:layout_width="150px"
            android:layout_height="150px"
            android:text="Down"
            android:layout_below="@+id/btnP"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/btnL"
            android:layout_width="150px"
            android:layout_height="150px"
            android:text="Left"
            android:layout_alignTop="@+id/btnR"
            android:layout_toLeftOf="@+id/btnP"
            android:layout_toStartOf="@+id/btnP" />
    </RelativeLayout>





</LinearLayout>
